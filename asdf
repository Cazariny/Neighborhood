## /etc/apache2/sites-available/hello.conf
<VirtualHost *>
    ServerName 54.162.81.173

    WSGIDaemonProcess hello user=grader group=grader threads=5
    WSGIScriptAlias / /home/grader/flask/hello.wsgi

    <Directory /home/grader/flask/>
        WSGIProcessGroup hello
        WSGIApplicationGroup %{GLOBAL}
        WSGIScriptReloading On

        Require all granted
    </Directory>
</VirtualHost>
